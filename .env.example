# Application
APP_URL=http://localhost:8010
APP_PORT=8010

# MySQL / MariaDB
DB_HOST=127.0.0.1
DB_NAME=wedding_app
DB_USER=root
DB_PASS=

# Initial admin (used only when the users table is empty)
ADMIN_INITIAL_USERNAME=admin
ADMIN_INITIAL_PASSWORD=AdminStart!2026

# Synology File Station API (optional)
SYNO_BASE_URL=
SYNO_USERNAME=
SYNO_PASSWORD=
SYNO_TARGET_PATH=/wedding-uploads
SYNO_VERIFY_SSL=1

# Optional fallback for Master-Key (if not in DB settings)
GALLERY_MASTER_KEY=

# Persistent storage
# By default, docker-compose.yml uses named volumes. For production you can bind-mount:
# UPLOADS_PATH=/opt/hochzeit-data/uploads
# QRCODES_PATH=/opt/hochzeit-data/qrcodes
